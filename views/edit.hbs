<main>
        <!-- In case of error, you should display div with class "errorContainer" -->
        <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

        
        {{#if error}}
        
          <div class="errorContainer">
            <p>{{error}}</p>
          </div>
       
      {{/if}}
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form  method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{currentCrypto.name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{currentCrypto.image}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{currentCrypto.price}}">
                    <label>Description:</label>
                    <textarea name="description"
                        id="description">{{currentCrypto.description}}</textarea>
                    <label>Payment method:</label>
                    <select id="payment" name="payment">
                        <option value="crypto-wallet"{{#if cryptoWallet}}selected {{/if}}>Crypto Wallet</option>
                        <option value="credit-card"{{#if creditCard}}selected {{/if}}>Credit Card</option>
                        <option value="debit-card"{{#if debitCard}}selected {{/if}}>Debit Card</option>
                        <option value="paypal" {{#if payPal}}selected {{/if}}>PayPal</option>
                    </select>
                    <input type="submit" id="btn" value="EDIT"></input>
                </form>
            </div>
        </section>
    </main>